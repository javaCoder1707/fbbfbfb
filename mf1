            tabCars = new TabPage("–ê–≤—Ç–æ–º–æ–±–∏–ª–∏");
            tabEmployees = new TabPage("–°–æ—Ç—Ä—É–¥–Ω–∏–∫–∏");
            tabCustomers = new TabPage("–ü–æ–∫—É–ø–∞—Ç–µ–ª–∏");
